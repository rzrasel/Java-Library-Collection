<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdgeLength="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rz.armorpagination.NoneScrollListView
                android:id="@+id/sysLstViewPaging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animationCache="false"
                android:background="#ffffff"
                android:divider="#f6f8fa"
                android:dividerHeight="1dp"
                android:paddingBottom="10dp" />
            <!--android:divider="#000000"
                android:scrollbars="none"
                android:scrollingCache="false"
                android:smoothScrollbar="true"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:dividerHeight="1dp"
                android:fadingEdge="none"-->

            <com.rz.armorpagination.ArmorPagination
                android:id="@+id/sysIdPagination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sysLstViewPaging"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:gravity="center" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
